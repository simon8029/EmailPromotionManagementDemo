<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/easyUIThemes/icon.css" rel="stylesheet" />
    <link href="~/Content/easyUIThemes/default/easyui.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.easyui.min.js"></script>
</head>
<body class="easyui-layout">
    <div data-options="region:'north'" style="height: 150px;">
        <table style="width:90%">
            <tr>
                <td rowspan="2" style="vertical-align:bottom;">
                    <p>
                        <a href="/Home">
                            <img style="width: 100px" src="~/Images/email-marketing.jpg" />
                        </a>
                    </p>
                </td>
                <td colspan="3"> </td>
            </tr>
            <tr>
                <td>
                    <p style="font-size: 48px" > Email Marketing </p>
                </td>
                <td>
                    <section id="login">
                        Hello, <span class="username">@User.Identity.Name</span>!
                    </section>
                </td>
            </tr>
        </table>
    </div>
    <div data-options="region:'west',split:true" title=" " style="width:300px;"></div>
    <div data-options="region:'center'">
        @RenderBody()
    </div>
</body>
</html>
